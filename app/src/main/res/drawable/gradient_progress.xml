<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1) the unfilled “track” -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="12dp"/>
            <solid android:color="#D5D6FF"/>
        </shape>
    </item>

    <!-- 2) the filled portion, clipped -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="12dp"/>
                <gradient
                    android:startColor="#43B7FF"
                    android:endColor="#4B7DFF"
                    android:angle="0"/>
            </shape>
        </clip>
    </item>

    <!-- 3) (optional) secondary progress, clipped the same way -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="12dp"/>
                <gradient
                    android:startColor="#43B7FF"
                    android:endColor="#4B7DFF"
                    android:angle="0"/>
            </shape>
        </clip>
    </item>

</layer-list>
